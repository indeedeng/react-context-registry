{
    "name": "react-singleton-context",
    "version": "1.0.5",
    "description": "A small library designed to register and return singletonized React contexts",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/indeedeng/react-singleton-context"
    },
    "files": [
        "dist",
        "src"
    ],
    "main": "dist/cjs/index.js",
    "module": "dist/esm/index.mjs",
    "cjs": "dist/cjs/index.js",
    "esm": "dist/esm/index.mjs",
    "es": "dist/esm/index.mjs",
    "types": "dist/types/index.d.ts",
    "scripts": {
        "prebuild": "npm run clean",
        "build:ts": "rollup -c ./rollup.config.mjs",
        "build:types": "tsc --project ./tsconfig.build.json --emitDeclarationOnly",
        "build": "npm run build:ts && npm run build:types",
        "package": "npm pack",
        "clean": "rm -rf dist stats coverage",
        "lint": "eslint ./src",
        "lint:fix": "eslint ./src --fix",
        "release": "standard-version --no-verify",
        "test": "jest",
        "test:watch": "jest --watch",
        "quality": "npm run lint && npm run test",
        "commit": "git-cz",
        "commitlint": "commitlint --color --verbose",
        "prepare": "husky"
    },
    "devDependencies": {
        "@babel/core": "^7.26.0",
        "@babel/eslint-parser": "^7.26.5",
        "@babel/plugin-transform-runtime": "^7.25.9",
        "@babel/preset-env": "^7.26.0",
        "@babel/preset-react": "^7.26.3",
        "@babel/preset-typescript": "^7.26.0",
        "@babel/runtime": "^7.26.0",
        "@commitlint/cli": "^18.6.1",
        "@commitlint/config-conventional": "^18.6.3",
        "@commitlint/cz-commitlint": "^18.6.1",
        "@rollup/plugin-babel": "^6.0.4",
        "@rollup/plugin-commonjs": "^25.0.8",
        "@rollup/plugin-node-resolve": "^15.3.1",
        "@testing-library/jest-dom": "^6.6.3",
        "@types/jest": "^29.5.14",
        "@types/react": "^18.3.18",
        "@typescript-eslint/eslint-plugin": "^6.21.0",
        "@typescript-eslint/parser": "^6.21.0",
        "commitizen": "^4.3.1",
        "eslint": "^8.57.1",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-compat": "^4.2.0",
        "eslint-plugin-prettier": "^5.2.1",
        "eslint-plugin-react": "^7.37.4",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "jest-junit": "^16.0.0",
        "lint-staged": "^15.3.0",
        "prettier": "^3.4.2",
        "react": "^18.3.1",
        "rollup": "^4.30.1",
        "rollup-plugin-peer-deps-external": "^2.2.4",
        "standard-version": "^9.5.0",
        "typescript": "^5.7.3"
    },
    "peerDependencies": {
        "react": "^17.0.0 || ^18.0.0"
    },
    "config": {
        "commitizen": {
            "path": "@commitlint/cz-commitlint"
        }
    },
    "lint-staged": {
        "src/**/*.{js,jsx,ts,tsx}": [
            "npm run lint:fix"
        ]
    }
}
